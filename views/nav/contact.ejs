<body>

    <header class="site-header fixed-top bg-black border-bottom bg-dark" id="header-box">
        <a href="#content" class="sr-only sr-only-focusable">Skip to main content</a>
        <div class="container">

            <!-- Navbar -->
            <nav class="navbar main-nav navbar-expand-lg navbar-dark" aria-label="Main navigation">
                <a href="/" class="navbar-brand d-inline-flex text-uppercase">Aaron Neme <i class="material-icons ml-2" aria-hidden="true">donut_large</i></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse text-uppercase" id="navbarContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="/about" class="nav-link">About</a>
                        </li>
                        <li class="nav-item">
                            <a href="/pnf-msg-01" class="nav-link">Testimonials</a>
                        </li>
                        <li class="nav-item">
                            <a href="/contact" class="nav-link">Contact</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <main id="content">

        <div class="container py-6">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h1 class="display-4 mb-4">Contact us</h1>
                    <hr class="border-1 border-light my-4 ml-0 text-left w-15" role="presentation">
                    <p class="lead text-secondary">Want to Hire Me? Have a Question or a Request?</p>
                    <p class="lead text-secondary">Fill out the form below.</p>
                </div>
            </div>
        </div>

        <div class="bg-white text-black">
            <div class="container py-2">
                <div class="bg-white mt-n6 px-3 px-lg-0">
                    <div class="row justify-content-center py-4 py-lg-5">
                        <div class="col-md-10 col-lg-8">
                            <p>Fields marked with an <span class="text-primary">*</span> are required.</p>
                            <form class="py-4" id="contactForm" action="/forms/requests" method="POST">
                                <div class="form-group">
                                    <label for="inputName">Name <span class="text-primary">*</span></label>
                                    <input type="text" class="form-control" name="inputName" placeholder="Enter your name" required>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail">Email <span class="text-primary">*</span></label>
                                    <input type="email" class="form-control" name="inputEmail" placeholder="Enter your email address" required>
                                </div>
                                <div class="form-group">
                                    <label for="inputCompany">Company<span class="text-primary"> (Optional)</span></label>
                                    <input type="text" class="form-control" name="inputCompany" placeholder="Enter your company">
                                </div>
                                <div class="form-group">
                                    <label for="inputRequestType">Request Type<span class="text-primary">*</span></label>
                                    <input type="text" class="form-control" name="inputRequestType" placeholder="Nature of Request (ex. Hiring Request, Question, Feedback, etc.">
                                </div>
                                <div class="form-group">
                                    <label for="messageTextArea">Message <span class="text-primary">*</span></label>
                                    <textarea class="form-control" name="messageTextArea" rows="9" placeholder="Enter your message" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-pill btn-primary">Submit</button><h5>By submitting, you agree with the <a href="/tos" class="termsLink">terms and conditions</a>.</h5>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer class="bg-white text-dark">
        <div class="container py-5 py-md-6">
            <div class="row justify-content-md-between">
                <div class="col-4 col-md-2">
                    <h2 class="h6">About</h2>
                    <ul class="nav flex-column">
                        <li class="mb-1"><a href="/pnf-msg-01" class="text-muted">Team</a></li>
                        <li class="mb-1"><a href="/pnf-msg-01" class="text-muted">Careers</a></li>
                        <li class="mb-1"><a href="/pnf-msg-01" class="text-muted">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-4 col-md-2">
                    <h2 class="h6 mb-3">Services</h2>
                    <ul class="nav flex-column">
                        <li class="mb-1"><a href="/pnf-msg-01" class="text-muted">Frontend</a></li>
                        <li class="mb-1"><a href="/pnf-msg-01" class="text-muted">Backend</a></li>
                        <li class="mb-1"><a href="/pnf-msg-01" class="text-muted">Fullstack</a></li>
                        <li class="mb-1"><a href="/pnf-msg-01" class="text-muted">Other</a></li>
                    </ul>
                </div>
                <div class="col-4 col-md-2">
                    <h2 class="h6 mb-3">Social</h2>
                    <ul class="nav flex-column">
                        <li class="mb-1"><a href="/pnf-msg-01" class="text-muted">Twitter</a></li>
                        <li class="mb-1"><a href="/pnf-msg-01" class="text-muted">Instagram</a></li>
                        <li class="mb-1"><a href="/pnf-msg-01" class="text-muted">Facebook</a></li>
                    </ul>
                </div>
                <div class="col-sm-12 col-md-4 mt-4 mt-md-0">
                    <h2 class="h6 mb-3">Company</h2>
                    <p class="text-muted">AN Web Design - Website Development To Meet Your Technology Needs</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>

